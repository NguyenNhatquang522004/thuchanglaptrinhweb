@model nguyennhatquang_2280618967.Models.Product

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this product?</h4>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Category:</dt>
                    <dd class="col-sm-9">@Model.Category?.Name</dd>
                </dl>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;">
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product? This action cannot be undone.')">
            <i class="fas fa-trash"></i> Delete Product
        </button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>

    <a asp-action="Display" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="fas fa-eye"></i> View Details
    </a>
</div>

<div class="mt-3">
    <small class="text-muted">
        <strong>Warning:</strong> Deleting this product will also delete all associated images and videos.
    </small>
</div>